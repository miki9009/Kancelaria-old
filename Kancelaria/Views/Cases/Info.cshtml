@model Kancelaria.Models.Case

<div class="form-group">
    <div class="row">
        <div class="col-lg-11" style="margin-left:50px;">
            <div class="form-check">
                <label class="form-check-label">
                    <input asp-for="repetytorium.InfoPelnomocnictwo" type="checkbox" class="form-check-input">
                    Czy jest pełnomocnictwo w sprawie?
                </label>
            </div>

            <div class="form-check">
                <label class="form-check-label">
                    <input asp-for="repetytorium.InfoUmowaPodpisana" type="checkbox" class="form-check-input">
                    Czy umowa jest podpisana?
                </label>
            </div>

            <div class="form-check">
                <label class="form-check-label">
                    <input asp-for="repetytorium.InfoZwolnienieKosztow" type="checkbox" class="form-check-input">
                    Czy jest zwolnienie od kosztów?
                </label>
            </div>

            <div class="form-check">
                <label class="form-check-label">
                    <input asp-for="repetytorium.InfoFormularzKosztow" type="checkbox" class="form-check-input">
                    Czy formularz kosztów został wypełniony?
                </label>
            </div>

            <div class="form-check">
                <label class="form-check-label">
                    <input asp-for="repetytorium.InfoFormularzKosztowPodpisany" type="checkbox" class="form-check-input">
                    Czy formularz jest podpisany?
                </label>
            </div>

            <div class="form-check">
                <label class="form-check-label">
                    <input asp-for="repetytorium.InfoFormularzDanych" type="checkbox" class="form-check-input">
                    Czy jest formularz danych?
                </label>
            </div>


            <div class="form-inline">
                <div class="form-check">
                    <label class="form-check-label">
                        <input asp-for="repetytorium.InfoZwroconoDokumentyKlientowi" type="checkbox" class="form-check-input">
                        Czy zwrócono dokumenty klientowi?
                    </label>

                    <input asp-for="repetytorium.InfoZwroconoDokumentyData" class="form-control input-20" />
                    <span asp-validation-for="repetytorium.InfoZwroconoDokumentyData" class="text-danger" />
                </div>
            </div>

            <div class="form-check">
                <label class="form-check-label">
                    <input asp-for="repetytorium.InfoOplaconaFaktura" type="checkbox" class="form-check-input">
                    Czy faktura została opłacona?
                </label>
            </div>

            <div class="form-inline">
                <label asp-for="repetytorium.InfoNumerFaktury" class="input-25"></label>
                <input asp-for="repetytorium.InfoNumerFaktury" class="form-control input-17" />
                <span asp-validation-for="repetytorium.InfoNumerFaktury" class="text-danger" />
            </div>

            <div class="form-inline">
                <label asp-for="repetytorium.InfoStawkaZaGodzine" class="input-25"></label>
                <input asp-for="repetytorium.InfoStawkaZaGodzine" class="form-control input-17" />
                <span asp-validation-for="repetytorium.InfoStawkaZaGodzine" class="text-danger" />
            </div>
            <div class="form-group">
                <h4 style="text-align:center"><b>Rozliczenie z klientem</b></h4>
                <textarea asp-for="repetytorium.RozliczenieZklientem" class="form-control" id="exampleTextarea" rows="4" style="resize: none;"></textarea>
            </div>

            <h4 style="text-align:center" ><b>Postęp w sprawie</b></h4>
            <div style="background-color:lightgray; border:inset; border-width:thin">                
                <ul style="list-style:none; margin-left:-30px">
                    <li>
                        <input asp-for="Ended" type="radio"  value="False">
                        <label>W TOKU</label>
                    </li>

                    <li>
                        <input asp-for="Ended" type="radio"  value="True">
                        <label>ZAKOŃCZONA</label>
                    </li>

                </ul>
            </div>

            </div>
    </div>
</div>
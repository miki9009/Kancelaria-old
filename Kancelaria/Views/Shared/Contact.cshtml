@{
    ViewData["Title"] = "Contact";
}
<form asp-action="SendMail" class="portfolio-form">
    <div class="form-group">
        <label class="label-10">Tytuł</label>
        <input @*asp-for="Title" *@ class="form-control" />
        <span @*asp-validation-for="Title" *@ class="text-danger" />
    </div>


    <div class="form-group" style="margin-top:15px">
        <div>
            <label class="label-10">Wiadomość*</label>
            <textarea @*asp-for="Text" *@ class="form-control col-md-4" rows="4" placeholder="Wiadomość"> </textarea>
            <p style="font-size:100%">
                <span @*asp-validation-for="Text" *@ class="text-danger" />
            </p>

        </div>
    </div>
    <div class="form-group" style="margin-top:15px">
        <div>
            <label class="label-15">Nadawca* (e-mail)</label>
            <input @*asp-for="SenderName" *@ class="form-control" />
            <span @*asp-validation-for="SenderName" *@ class="text-danger" />
        </div>
    </div>
    <input type="submit" style="float:right" id="submit-button" value="Wyślij" class="btn button-kancelaria" />
    <p>*Pole obowiązkowe</p>
</form>


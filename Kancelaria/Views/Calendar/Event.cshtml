@model Kancelaria.Models.Calendar.Calendar
<div id="fill"></div>
<div  id="event-div">
    
    <form asp-action="Index">
        <input asp-for="eventIndex" type="hidden" class="form-control" />
        <div class="form-horizontal">
            <h2>Zadanie</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!--Index zadania-->
            <!--NAZWA ZADANIA-->
            <input asp-for="ID" hidden id="event-id"/>
            <div class="form-inline">
                <label asp-for="eventName" class="input-15" style="margin-bottom:25px;"></label>
                <input asp-for="eventName" id="event-name" class="form-control input-20" />
                <span asp-validation-for="eventName" class="text-danger" />
            </div>

            <!--OPIS ZADANIA-->
            <div class="form-group">
                <div>
                    <h4 style="text-align:center;"><b>Opis zadania</b></h4>
                    <textarea asp-for="characteristics" id="event-description" class="form-control col-md-11"> </textarea>
                </div>

            </div>

            <div class="form-inline">
                <label asp-for="startDate" class="input-15" style="margin-bottom:15px;"></label>
                <input id="event-date-input" name="startDate" class="form-control input-20" readonly />
                <span asp-validation-for="startDate" class="text-danger" />
            </div>
            @{
                if (Model.eventTime == null)
                {
                    var time = DateTime.Now;
                    var hour = time.Hour;
                    var minute = time.Minute;
                    Model.eventTime = string.Format("{0}:{1}", hour, minute);
                }
            }

            <div class="form-inline">
                <label asp-for="eventTime" class="input-15" style="margin-bottom:15px;"></label>
                <input asp-for="eventTime" id="event-time" class="form-control input-20" />
                <span asp-validation-for="eventTime" class="text-danger" />
            </div>
            <table style="margin-left:30%;">
                <tr>
                    <td>
                          <input type="submit" id="submit-button" value="Dodaj" class="btn btn-default btn-event" />
                    </td>
                    <td>
                         <div class="btn btn-default btn-event" onclick="CloseEve()">
                                    Anuluj
                         </div>
                    </td>
                    <td>
                         <div class="btn btn-default btn-event" id="delete-button" onclick="deleteEvent()">
                                    Usuń
                         </div>
                    </td>
                </tr>
            </table>
        </div>
    </form>
</div>

